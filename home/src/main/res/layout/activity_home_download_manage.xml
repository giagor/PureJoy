<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="androidx.recyclerview.widget.LinearLayoutManager"/>
        <import type="com.topview.purejoy.home.download.adapter.DownloadManageAdapter"/>
        <import type="com.topview.purejoy.home.download.DownloadManageViewModel"/>
        <variable
            name="downloadTaskLayoutManager"
            type="LinearLayoutManager" />
        <variable
            name="downloadTaskAdapter"
            type="DownloadManageAdapter" />
        <variable
            name="downloadManageViewModel"
            type="DownloadManageViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".download.DownloadManageActivity"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="@{downloadTaskLayoutManager}"
            app:adapter="@{downloadTaskAdapter}"
            app:downloadSongInfos="@{downloadManageViewModel.downloadSongsLiveData}"/>
        
    </LinearLayout>
</layout>