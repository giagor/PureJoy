<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.topview.purejoy.home.mine.HomeMineFragment"/>
        <variable
            name="homeMineFragment"
            type="HomeMineFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mine.HomeMineFragment"
        android:orientation="vertical"
        android:paddingStart="@dimen/home_padding_left"
        android:paddingEnd="@dimen/home_padding_right">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            
            <com.topview.purejoy.common.widget.compose.RoundedCornerImageView
                android:id="@+id/home_riv_user_portrait"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                app:userPortrait="@{homeMineFragment.userLiveData}"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/home_riv_user_portrait"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:userNickName="@{homeMineFragment.userLiveData}"/>
            
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/home_mine_divider_color"/>
        
    </LinearLayout>
</layout>