<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_pop_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_pop_list_item_name_tx"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:maxLines="1"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/common_unknown"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/music_pop_list_item_name_tx"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:id="@+id/music_pop_list_item_author_tx"
        android:maxLines="1"
        android:text="@string/common_unknown"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_pop_list_item_cancel_iv"
        android:src="@drawable/music_delete_16"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="8dp"
        android:layout_gravity="end"/>

</RelativeLayout>