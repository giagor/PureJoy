<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:background="@color/white"
    android:id="@+id/music_daily_recommend_item_layout"
    android:orientation="horizontal">

    <com.topview.purejoy.common.widget.RoundImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        app:draw_type="round_rect"
        app:round_rect_radius="2.0"
        android:id="@+id/music_daily_recommend_item_iv"
        app:thumb="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginHorizontal="4dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/unknown"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/music_daily_recommend_item_name_tx"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/music_daily_recommend_item_reason_tx"
                android:text="@string/unknown"
                android:textColor="@color/orange"
                android:layout_marginHorizontal="2dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:maxLines="1"
                android:id="@+id/music_daily_recommend_item_author_tx"
                android:text="@string/unknown"/>

        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music_recommend_more_24"
        android:id="@+id/music_daily_recommend_item_more_bt"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginHorizontal="2dp" />



</LinearLayout>
